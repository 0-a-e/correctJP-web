{
    "name": "correctJP-web",
    "version": "0.3.1",
    "main": "",
    "repository": "git@github.com:DevSubmarinonline/correctJP-web.git",
    "author": "YamaD <yamad@dyama.net>",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.2.1",
        "sass": "^1.32.5"
    },
    "dependencies": {
        "cjp": "^0.4.4"
    },
    "scripts": {
        "fmt": "prettier --write 'src/**/*.{js,json,md,html}' && prettier --write 'api/**/*.{js,json}'",
        "bundle": "npm run bundle:www && npm run bundle:api",
        "bundle:www": "parcel build -d pub --public-url ./ src/*.html",
        "bundle:api": "parcel build -d api --public-url ./ api/*.js",
        "build": "npm run build:sass && npm run bundle",
        "build:sass": "sass -s compressed src/css:src/css",
        "postbuild": "cp -r static/* pub/"
    }
}
